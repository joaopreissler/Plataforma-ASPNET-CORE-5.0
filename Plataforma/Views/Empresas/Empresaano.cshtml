@model Plataforma.ViewModels.EmpresaanoViewModel
@{
    ViewData["Title"] = "Empresaano";
}

<h1>Empresaano</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertarEmpresaAno">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="EmpresaId"  hidden value="@Model.EmpresaId"/>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mes" class="control-label"></label>
                <input asp-for="mes" class="form-control" />
                <span asp-validation-for="mes" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>