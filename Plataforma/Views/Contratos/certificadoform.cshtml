@model Plataforma.ViewModels.FacturaViewModel
<head>

    <style type="text/css">

        .nombre {
            font-size: 28px;
        }

        body {
            margin-left: 0px;
            margin-top: 0px;
            margin-right: 0px;
            margin-bottom: 0px;
        }
        .container {
            max-width: 100% !important;
            padding-right: 0px !important;
            padding-left: 0px !important;
        }
    </style>

</head>




<body>

    <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0" background="http://plataforma-dev.us-east-2.elasticbeanstalk.com/PRL/cert21.jpg" style=" background-size: 100% 100%; ">

        <tr>



            <td valign="top">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">

                    <tr>

                        <td><img src="http://plataforma-dev.us-east-2.elasticbeanstalk.com/PRL/LOGO-EUROBRAZIL2.png" width="384" height="147" /></td>

